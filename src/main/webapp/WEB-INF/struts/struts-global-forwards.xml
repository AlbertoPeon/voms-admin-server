<struts-config>

  <global-forwards>
  
    <forward
      name="welcome"
      path="/Welcome.do" />

    <forward
      name="login"
      path="/Login.do" />
    <forward
      name="siblings"
      path="/Siblings.do" />


    <forward
      name="configuration"
      path="/Configuration.do" />

    <forward
      name="admin"
      path="/SearchUser.do" />
    <forward
      name="register"
      path="/StartRegistration.do" />
    <forward
      name="user"
      path="/UserHome.do" />
    <forward
      name="limbo"
      path="/Limbo.do" />

    <forward
      name="test"
      path="/Test.do" />

    <forward
      name="manageMembership"
      path="/ManageMembership.do" />
    <forward
      name="manageRequests"
      path="/PendingRequests.do" />

    <forward
      name="pendingRequests"
      path="/PendingRequests.do" />

    <forward
      name="manageConfiguration"
      path="/ManageConfiguration.do" />
    <forward
      name="manageNotification"
      path="/ManageNotification.do" />

    <forward
      name="manageUsers"
      path="/SearchUser.do" />
    <forward
      name="manageGroups"
      path="/SearchGroups.do" />
    <forward
      name="manageRoles"
      path="/ManageRoles.do" />

    <!--  User forwards -->
    <forward
      name="preCreateUser"
      path="/PreCreateUser.do" />
    <forward
      name="createUser"
      path="/CreateUser.do" />
    <forward
      name="deleteUser"
      path="/DeleteUser.do" />
    <forward
      name="confirmDeleteUser"
      path="/ConfirmDeleteUser.do" />

    <forward
      name="preEditUser"
      path="/PreEditUser.do" />
      
    <forward
      name="editUser"
      path="/EditUser.do" />

    <forward
      name="generalErrorPage"
      path="/GeneralErrorPage.do" />
      
    <forward
      name="help"
      path="/Help.do" />

    <forward
      name="registrationDisabled"
      path="/RegistrationDisabled.do" />

    <forward
      name="manageTags"
      path="/LoadTags.do" />

  </global-forwards>

</struts-config>
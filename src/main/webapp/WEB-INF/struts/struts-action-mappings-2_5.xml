<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">


<struts-config>

  <action-mappings>

    <!-- AUP action mappings -->
    <action
      path="/ListAUPs"
      type="org.glite.security.voms.admin.actions.aup.ListAUPsAction"
    >

      <forward
        name="success"
        path=".list.aups" />

    </action>
    
    <action
      path="/ShowAUP"
      type="org.glite.security.voms.admin.actions.aup.LoadAUPAction"
    >

      <forward
        name="success"
        path=".show.aup" />

    </action>

  
    <action
      path="/CreateAUP" forward=".create.aup"/>
      
    <action
      name="AUPForm"
      path="/SaveAUP"
      type="org.glite.security.voms.admin.actions.aup.CreateAUPAction"
    >

        
      <forward
        name="success"
        path=".list.aups" />

    </action>
    
    <action
      path="/TestAUP"
      type="org.glite.security.voms.admin.actions.aup.TestAction"
    >

        
      <forward
        name="success"
        path="/pages/aup/test.jsp" />

    </action>

  </action-mappings>

</struts-config>
				</var>
    		</field>
    		
    		<field property="phoneNumber" depends="mask">
    			<msg name="mask" key="errors.invalid_input"/>
    			<arg key="label.phone_number"/>
    			<var>
					<var-name>mask</var-name>
					<var-value>${formMask}</var-value>
				</var>
    		</field>
    		
    		<field property="comments" depends="mask">
    			<msg name="mask" key="errors.invalid_input"/>
    			<arg key="label.comments"/>
    			<var>
					<var-name>mask</var-name>
					<var-value>${formMask}</var-value>
				</var>
    		</field>
    		
    	</form>
    	
    	<form name="/AddACLEntry">
    		<field property="entryKind" depends="required">
    			<msg name="required" key="errors.invalid_acl_entry_type"/>
    		</field>
    	</form>
    </formset>     

</form-validation>

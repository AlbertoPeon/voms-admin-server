				</var>
    		</field>
    		
    		<field property="emailAddress" depends="required,email">
    			<arg key="label.emailAddress"/>
    		</field>  		    	

    	</form>
    	-->
    	<form name="/CreateGroup">
    		<field property="name" depends="required,mask">
				<msg name="mask" key="errors.invalid_input"/>
    			<arg key="label.group"/>
    			<var>
					<var-name>mask</var-name>
					<var-value>${formMask}</var-value>
				</var>
    		</field>

    	</form>
    	
    	<form name="/CreateRole">
    		<field property="name" depends="required,mask">
				<msg name="mask" key="errors.invalid_input"/>
    			<arg key="label.role"/>
    			<var>

<form-validation>

<!--
     This is a minimal Validator form file with a couple of examples.
-->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->
        <constant>
        	<constant-name>formMask</constant-name>
        	<constant-value><![CDATA[^[^<>&=;]*$]]></constant-value>
        </constant>
        
        <constant>
        	<constant-name>dnMask</constant-name>
        	<constant-value><![CDATA[^[^<>&;]*$]]></constant-value>
        </constant>
    </global>

    <formset>
    
    	<form name="/UI">
    		<field property="panelId" depends="required,mask">
			<arg key="label.panelId"/>
    		<var>
					<var-name>mask</var-name>
					<var-value>${formMask}</var-value>
				</var>
    		</field>
    	</form>
    	
    	<form name="/UserAttributes">
    		<field property="attributeName" depends="required,mask">
    			
				<arg key="label.attribute.name"/>
				
				<var>
					<var-name>mask</var-name>
					<var-value>${formMask}</var-value>
				</var>
    		</field>
    		
    		<field property="attributeValue" depends="mask">
				<msg name="mask" key="errors.invalid_input"/>
				<arg key="label.attribute.value"/>
    			<var>
					<var-name>mask</var-name>
					<var-value>${formMask}</var-value>
				</var>
    		</field>
    	</form>
    	
    	<form name="/GroupAttributes">
    		<field property="attributeName" depends="required,mask">
				<msg name="mask" key="errors.invalid_input"/>

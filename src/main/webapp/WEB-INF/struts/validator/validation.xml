    		</field>
    	</form>
    	
    	<form name="/SubmitVOMembershipRequest">
    	
    		<field property="aupAccepted" depends="required">
    			<msg name="required" key="errors.aup_accepted"/>
    		</field>
    		
    		<field property="emailAddress" depends="required,email">
    			<arg key="label.emailAddress"/>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
       
<tiles-definitions>
  
    <definition name="empty-header" template="/WEB-INF/p/shared/header.jsp">
        <put-attribute name="nav" value="" type="string" />
        <put-attribute name="search" value="" type="string" />
    </definition>
    
    <definition name="admin-header" template="/WEB-INF/p/shared/header.jsp">
        <put-attribute name="nav" value="/WEB-INF/p/shared/admin-nav.jsp"/>
        <put-attribute name="search" value="/WEB-INF/p/shared/search.jsp"/>
    </definition>
    
    <definition name="user-header" template="/WEB-INF/p/shared/header.jsp">
        <put-attribute name="nav" value="/WEB-INF/p/shared/user-nav.jsp"/>
        <put-attribute name="search" value=""/>
    </definition>
    
    <definition name="base-template" template="/WEB-INF/p/shared/new-layout.jsp">
        <put-attribute name="title" value="VOMS-Admin 2.5" type="string"/>
        <put-attribute name="info" value="/WEB-INF/p/shared/info.jsp"/>
        <put-attribute name="header" value="empty-header" type="definition"/>
        
        <put-attribute name="messages" value="/WEB-INF/p/shared/messages.jsp"/>
        <put-attribute name="body" value=" " type="string"/>
        <put-attribute name="footer" value="/WEB-INF/p/shared/footer.jsp"/>
    </definition>

    <definition name="admin-template" extends="base-template">
        <put-attribute name="header" value="admin-header" type="definition"/>
    </definition>
    
    <definition name="user-template" extends="base-template">
        <put-attribute name="header" value="user-header" type="definition"/>
    </definition>
        
    <definition name="test.page" extends="admin-template">
        <put-attribute name="body" value="/WEB-INF/p/test/test.jsp"/>
    </definition>
    
    <definition name="userHome" extends="user-template">
      <put-attribute name="body" value="This will be user's home"/>
    </definition>
    
    <definition name="adminHome" extends="admin-template">
      <put-attribute name="body" value="This will be admins' home"/>
    </definition>
    
    
    <definition name="userSearch" extends="admin-template">
      <put-attribute name="body" value="/WEB-INF/p/user/search.jsp"/>
    </definition>
    
    <definition name="register" extends="base-template">
      <put-attribute name="body" value="/WEB-INF/p/register/registration.jsp"/>
    </definition>
    
    <definition name="registerConfirmation" extends="base-template">
      <put-attribute name="body" value="Registration confirmation!"/>
    </definition>
    
</tiles-definitions>
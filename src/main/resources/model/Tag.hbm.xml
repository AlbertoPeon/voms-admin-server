<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.glite.security.voms.admin.model.Tag" table="tags">
	
		<id name="id" column="id" type="long">
			<generator class="native"/>
		</id>
	
		<property name="name" type="string" update="true" insert="true"
			not-null="true" unique="true" />
		
		<property name="permissions" 
            type="org.glite.security.voms.admin.database.PermissionType" 
            update="true" 
            insert="true"
            not-null="true"/>
		
      <property name="permissionsOnPath" 
            type="org.glite.security.voms.admin.database.PermissionType" 
            update="true" 
            insert="true"/>
	
      <set name="mappings" cascade="all-delete-orphan" inverse="true">
        <key column="tag_id" on-delete="cascade"/>
        <one-to-many class="org.glite.security.voms.admin.model.TagMapping"/>      
      </set>
      
      	
	</class>

</hibernate-mapping>
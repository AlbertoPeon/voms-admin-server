<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.glite.security.voms.admin.model.VOMSUserAttribute" table="usr_attrs">
		<composite-id>
		
			<key-many-to-one 
				name="attributeDescription"
				column="a_id"
				class="org.glite.security.voms.admin.model.VOMSAttributeDescription"/>

			<key-many-to-one 
				name="user"
				column="u_id"
				class="org.glite.security.voms.admin.model.VOMSUser"/>
				
		</composite-id>
		
		<property name="value"  column="a_value" type="string" />
		
	</class>
</hibernate-mapping>
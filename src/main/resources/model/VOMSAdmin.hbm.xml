<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="org.glite.security.voms.admin.model.VOMSAdmin" table="admins">
		
		<id name="id" column="adminid" type="long">
			<generator class="native"/>
		</id>
		
		<property name="dn" type="string" column="dn" not-null="true" unique-key="true"/>
		<property name="emailAddress" type="string" column="email_address"/>
		
		<many-to-one name="ca" column="ca" class="org.glite.security.voms.admin.model.VOMSCA" not-null="true"/>
    
        <set name="tagMappings" inverse="true" cascade="all-delete-orphan">
          <key column="admin_id" on-delete="cascade"/>
          <one-to-many class="org.glite.security.voms.admin.model.TagMapping"/>
        </set>
        
        <set name="tasks" cascade="all-delete-orphan" lazy="false">
          <key column="admin_id"/>
          <one-to-many class="org.glite.security.voms.admin.model.task.Task"/>        
        </set>
        
	</class>
</hibernate-mapping>
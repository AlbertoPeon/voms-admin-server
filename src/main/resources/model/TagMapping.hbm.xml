<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.glite.security.voms.admin.model.TagMapping" table="tag_mapping">

		<id name="id" column="mapping_id">
			<generator class="native"/>
		</id>
		
		<natural-id>
			<many-to-one name="tag" class="org.glite.security.voms.admin.model.Tag"
				column="tag_id" 
				foreign-key="fk_tag_mapping_tag"
				not-null="true" 
			/>		
	
			<many-to-one name="group" class="org.glite.security.voms.admin.model.VOMSGroup"
				column="gid" 
				foreign-key="fk_tag_mapping_groups"
				not-null="true" 
			/>	

			<many-to-one name="role" class="org.glite.security.voms.admin.model.VOMSRole" 
				column="rid"
				foreign-key="fk_tag_mapping_roles"
				not-null="false"		
			/>
      
            <many-to-one name="admin" class="org.glite.security.voms.admin.model.VOMSAdmin" 
              column="admin_id"
              foreign-key="fk_tag_mapping_admins"
              not-null="true"/>
              
		</natural-id>
	</class>
</hibernate-mapping>

<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.glite.security.voms.admin.model.VOMSAttributeDescription" table="attributes">
		<id name="id" column="a_id">
			<generator class="native" />
		</id>

		<property name="name" not-null="true" unique="true"
			column="a_name" type="string" />
			
		<property name="description" column="a_desc" type="text" />
		<property name="unique" type="boolean" not-null="true">
			<column name="a_uniq" default="0"/>
		</property>			
	</class>
</hibernate-mapping>
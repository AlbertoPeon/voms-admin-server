<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.glite.security.voms.admin.model.ACL" table="acl2">	
		
		<id name="id" column="acl_id" type="long">
			<generator class="native"/>
		</id>
	
		<natural-id>
			<many-to-one name="group" column="group_id" class="org.glite.security.voms.admin.model.VOMSGroup" not-null="true" lazy="false"/>
			<property name="defaultACL" type="java.lang.Boolean" not-null="true"/>
			<many-to-one name="role" column="role_id" class="org.glite.security.voms.admin.model.VOMSRole" not-null="false" lazy="false" />
		</natural-id>
		
		<map name="permissions" cascade="all-delete-orphan" table="acl2_permissions" lazy="false">
			<key column="acl_id"/>
			<map-key-many-to-many class="org.glite.security.voms.admin.model.VOMSAdmin" column="admin_id"/>
			<element type="org.glite.security.voms.admin.database.PermissionType" column="permissions"/>
		</map>
	</class>

</hibernate-mapping>
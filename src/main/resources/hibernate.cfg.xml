<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    
    	<property name="hibernate.bytecode.provider">cglib</property>
    	
    	<!-- Cache Configurations -->
    
        <property name="hibernate.cache.provider_class">
          net.sf.ehcache.hibernate.SingletonEhCacheProvider
        </property>
    
        <property name="hibernate.cache.use_minimal_puts">false</property>
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.use_structured_entries">true</property>
    	
    	<mapping resource="model/VOMSDBVersion.hbm.xml" />
    	<mapping resource="model/VOMSSeqNumber.hbm.xml" />
        <mapping resource="model/VOMSAdmin.hbm.xml" />
        <mapping resource="model/VOMSCA.hbm.xml" />
        <!--
        <mapping resource="model/Certificate.hbm.xml" />
        <mapping resource="model/VOMSUser.hbm.xml" />
        -->
        <mapping resource="model/VOMSUserAttribute.hbm.xml" />
        <mapping resource="model/VOMSGroup.hbm.xml" />
        <mapping resource="model/VOMSGroupAttribute.hbm.xml" />
        <mapping resource="model/VOMSRole.hbm.xml" />
        <mapping resource="model/VOMSRoleAttribute.hbm.xml" />
        <mapping resource="model/VOMSAttributeDescription.hbm.xml" />
        <mapping resource="model/VOMSCapability.hbm.xml" />
        <mapping resource="model/VOMSMapping.hbm.xml" />
        <mapping resource="model/ACL.hbm.xml" />
        <mapping resource="model/VOMembershipRequest.hbm.xml" />
        
        <mapping resource="model/AUP.hbm.xml"/>
        <mapping resource="model/AUPVersion.hbm.xml"/>
        <mapping resource="model/AUPAcceptanceRecord.hbm.xml"/>
        <mapping resource="model/Tag.hbm.xml"/>
        <mapping resource="model/TagMapping.hbm.xml"/>
        
        <!--  NEW MAPPINGS -->
        
        <!--  VOMS USER & CERTIFICATE -->
        <mapping class="org.glite.security.voms.admin.model.VOMSUser"/>
        <mapping class="org.glite.security.voms.admin.model.Certificate"/>
        
        <!--  TASKS  -->
        <mapping class="org.glite.security.voms.admin.model.task.TaskType"/>
        <mapping class="org.glite.security.voms.admin.model.task.LogRecord"/>
        <mapping class="org.glite.security.voms.admin.model.task.Task"/>
        <mapping class="org.glite.security.voms.admin.model.task.ApproveUserRequestTask"/>
        <mapping class="org.glite.security.voms.admin.model.task.SignAUPTask"/>
        
        <!-- REQUESTS -->
        <mapping class="org.glite.security.voms.admin.model.request.Request"/>
        <mapping class="org.glite.security.voms.admin.model.request.RequesterInfo"/>
        <mapping class="org.glite.security.voms.admin.model.request.NewVOMembershipRequest"/>
        <mapping class="org.glite.security.voms.admin.model.request.GroupMembershipRequest"/>
        <mapping class="org.glite.security.voms.admin.model.request.RoleMembershipRequest"/>
        <mapping class="org.glite.security.voms.admin.model.request.CertificateRequest"/>
        
        <!-- PERSONAL INFO -->
        <mapping class="org.glite.security.voms.admin.model.personal_info.PersonalInformationType"/>
        <mapping class="org.glite.security.voms.admin.model.personal_info.PersonalInformationRecord"/>
        
        
        
        
        
    </session-factory>
</hibernate-configuration>
